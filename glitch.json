{
  "start": "cd server && npm start",
  "watch": {
    "ignore": [
      "\\.git",
      "node_modules/**/node_modules"
    ],
    "install": {
      "include": [
        "^package\\.json$",
        "^\\.env$"
      ]
    },
    "restart": {
      "include": [
        "^server\\.js$",
        "^api/.*\\.js$"
      ]
    },
    "throttle": 1000
  }
}